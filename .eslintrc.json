{
	"env": {
		"commonjs": true,
		"es2021": true,
		"jest": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:eslint-plugin-import/recommended",
		"plugin:prettier/recommended"
	],
	"plugins": ["prettier", "eslint-plugin-prettier/recommended"],
	"rules": {
		"no-unused-vars": "error",
		"no-undef": "warn",
		"comma-dangle": ["off", "always"]
	},
	"parserOptions": {
		"ecmaVersion": 12
	},
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					["@/", "./*"],
					["@/lib", "./lib/"],
					["@/mocks", "./mocks/"]
				],
				"extensions": [".js", ".jsx", ".json"]
			}
		}
	}
}
