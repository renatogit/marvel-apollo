{
	"compilerOptions": {
		"noUnusedLocals": true,
		"outDir": "dist",
		"lib": ["es6"],
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"types": ["jest", "node"],
		"typeRoots": ["node_modules/@types", "src/@types"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@mock/*": ["mock/*"],
			"@query/*": ["query/*"]
		}
	},
	"files": ["src/types/graphql.d.ts"],
	"include": ["src/**/*", "src/**/*.spec.ts"],
	"exclude": ["node_modules"]
}
